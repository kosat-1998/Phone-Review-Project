<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_background_2"
    tools:context=".ui.detail.DetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detail_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:background="@drawable/custom_corner"
            android:padding="10sp"
            android:src="@drawable/loading" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            app:cardCornerRadius="30sp">

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#7C7979"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="#FFF"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"

            app:cardBackgroundColor="#6C6969"
            app:cardCornerRadius="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_corner"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_cpu" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    app:cardBackgroundColor="#6C6969"
                    app:cardCornerRadius="15sp">

                    <TextView
                        android:id="@+id/detail_cpu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="10"
                        android:minLines="5"
                        android:text="@string/app_name"
                        android:textColor="#FFF" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_margin="5sp"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5sp"
            android:weightSum="3">

            <Button
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:background="#000" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginBottom="5sp"
                    android:background="#000" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="@string/ram"
                    android:textColor="@color/detail_text_color" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:background="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="@string/rom"
                    android:textColor="@color/detail_text_color" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:background="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="@string/main_camera"
                    android:textColor="@color/detail_text_color" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:background="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="@string/sefile_camera"
                    android:textColor="@color/detail_text_color" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:background="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="@string/feature"
                    android:textColor="@color/detail_text_color" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:background="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="@string/display"
                    android:textColor="@color/detail_text_color" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:background="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="@string/release_date"
                    android:textColor="@color/detail_text_color" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5sp"
                    android:background="#000" />

            </LinearLayout>

            <Button
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:background="#000" />

            // c 2

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="2"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginBottom="5sp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/detail_ram"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="@string/ram"
                    android:textSize="8sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/detail_rom"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="@string/ram"
                    android:textSize="8sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/detail_main_camera"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="@string/ram"
                    android:textSize="8sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/detail_sefile_camera"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="@string/ram"
                    android:textSize="8sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/detail_feature"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="@string/ram"
                    android:textSize="8sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/detail_display"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="@string/ram"
                    android:textSize="8sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/detail_release_date"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="@string/ram"
                    android:textSize="8sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5sp"
                    android:background="#000" />

            </LinearLayout>

            <Button
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:background="#000" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_margin="5sp"
            android:background="#000" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            app:cardCornerRadius="5sp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_backgruond_3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10sp"
                    android:weightSum="3">


                        <TextView
                            android:id="@+id/os_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="2"
                            android:text="@string/app_name"
                            android:textSize="20sp" />


                    <Button
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:background="#000" />

                    <ImageView
                        android:id="@+id/os_image"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/loading" />

                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="10sp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        // os

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5sp"
                            android:layout_weight="2"
                            app:cardCornerRadius="10sp">

                            <TextView
                                android:id="@+id/detail_os"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/my_background_4"
                                android:gravity="center"
                                android:minLines="5"
                                android:text="@string/app_name"
                                android:textSize="8sp" />
                        </androidx.cardview.widget.CardView>

                        <Button
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5sp"
                            android:background="#000" />

                        //price

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:layout_weight="2"
                            app:cardCornerRadius="10sp">

                            <TextView
                                android:id="@+id/detail_price"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/my_background_1"
                                android:gravity="center"
                                android:minLines="5"
                                android:text="@string/app_name" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                //review

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="30sp">

                    <TextView
                        android:id="@+id/review_dialog_show"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/review"
                        android:textSize="30sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="15sp">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pie_chart"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/my_background_5" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

</ScrollView>