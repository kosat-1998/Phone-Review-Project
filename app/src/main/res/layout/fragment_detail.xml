<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_background_4"
    tools:context=".ui.detail.DetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutAnimation="@anim/layout_animation_up_to_down">

        //row image

        <androidx.cardview.widget.CardView
            android:id="@+id/d_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5sp"
            android:layout_marginStart="5sp"
            app:cardBackgroundColor="#000"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toTopOf="@id/row_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread">

            <ImageView
                android:id="@+id/detail_image"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/loading" />
        </androidx.cardview.widget.CardView>

        //row 1

        <androidx.cardview.widget.CardView
            android:id="@+id/row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_row"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/d_image"
            app:layout_constraintVertical_chainStyle="packed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/row1_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/my_background_6">

                <LinearLayout
                    android:id="@+id/row_cpu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    app:layout_constraintBottom_toTopOf="@+id/row_ram"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/image_cpu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/ny_size"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@drawable/ic_cpu" />


                    <TextView
                        android:id="@+id/detail_cpu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/ny_size"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/app_name"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row_ram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/row_cpu">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2">

                        <ImageView
                            android:id="@+id/image_ram"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/ny_size"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:src="@drawable/ic_ram" />


                        <TextView
                            android:id="@+id/detail_ram"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/ny_size"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/app_name" />
                    </LinearLayout>
                    //row 2

                    <androidx.cardview.widget.CardView
                        android:id="@+id/row_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#000"
                        app:cardCornerRadius="20dp">

                        <TextView
                            android:id="@+id/detail_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/ny_size"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="@string/app_name"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/row_1"
            app:layout_constraintVertical_chainStyle="packed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/my_backgruond_3"
                android:orientation="vertical">

                //row 3

                <androidx.cardview.widget.CardView
                    android:id="@+id/row_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#000"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:id="@+id/row_3_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2">

                        // camera row

                        <LinearLayout
                            android:id="@+id/camera_row"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            //**************************************************************
                            //row main camera

                            <LinearLayout
                                android:id="@+id/row_main_camera"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:weightSum="2">

                                <ImageView
                                    android:id="@+id/image_main_camera"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/ny_size"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:src="@drawable/ic_camera" />


                                <TextView
                                    android:id="@+id/detail_main_camera"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/ny_size"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:minLines="5"
                                    android:text="@string/app_name"
                                    android:textColor="#FD0000"
                                    android:textColorHint="#FF0B0B"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                            //row sefile camera

                            <LinearLayout
                                android:id="@+id/row_sefile_camera"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/ny_size"
                                android:orientation="horizontal"
                                android:padding="@dimen/ny_size"
                                android:weightSum="2">

                                <ImageView
                                    android:id="@+id/image_sefile_camera"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/ny_size"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:src="@drawable/ic_sefile_camera" />

                                <TextView
                                    android:id="@+id/detail_sefile_camera"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/ny_size"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:minLines="5"
                                    android:text="@string/app_name"
                                    android:textColor="#DB08FF"
                                    android:textSize="10sp" />
                            </LinearLayout>
                            //row display

                            <LinearLayout
                                android:id="@+id/row_display"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <ImageView
                                    android:id="@+id/image_display"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:src="@drawable/display" />


                                <TextView
                                    android:id="@+id/detail_display"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:minLines="10"
                                    android:text="@string/app_name"
                                    android:textColor="#FB4810"
                                    android:textColorHint="@drawable/my_background"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            //**************************************************************
                        </LinearLayout>
                        //memory row

                        <androidx.cardview.widget.CardView
                            android:id="@+id/memory_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            app:cardCornerRadius="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@drawable/my_background_6"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/ny_size"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="10dp">

                                    <TextView
                                        android:id="@+id/detail_os"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:maxLines="3"
                                        android:minLines="2"
                                        android:text="@string/app_name"
                                        android:textColor="#FFCC05"
                                        android:textSize="10sp"
                                        android:textStyle="italic" />
                                </androidx.cardview.widget.CardView>


                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@android:color/transparent"
                                    app:cardCornerRadius="30dp">

                                    <TextView
                                        android:id="@+id/detail_capacity"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:maxLines="1"
                                        android:text="@string/app_name"
                                        android:textColor="#0FFAC4"
                                        android:textStyle="bold" />
                                </androidx.cardview.widget.CardView>


                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/ny_size"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="10dp">

                                    <TextView
                                        android:id="@+id/detail_price"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:maxLines="1"
                                        android:text="@string/app_name"
                                        android:textColor="#00B1FF" />
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                //row 4

                <androidx.cardview.widget.CardView
                    android:id="@+id/row_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5sp"
                    android:layout_marginStart="5sp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_background_1"
                        android:orientation="vertical">

                        // feature view
                        <LinearLayout
                            android:id="@+id/feature_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">

                            <ImageView
                                android:id="@+id/image_feature"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:src="@drawable/feature" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/ny_size"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@android:color/transparent">

                                <TextView
                                    android:id="@+id/detail_feature"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:minLines="5"
                                    android:text="@string/app_name"
                                    android:textSize="10sp" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_margin="5sp"
                            android:background="#000" />
                        //date view

                        <LinearLayout
                            android:id="@+id/date_row"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/ny_size"
                                android:layout_weight="2"
                                app:cardCornerRadius="10dp">

                                <TextView
                                    android:id="@+id/release_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="@string/app_name"
                                    android:textColor="#F60000" />
                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/operating_system"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/ny_size"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/os_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/loading" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/ny_size"
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp">

                                <Button
                                    android:id="@+id/review_dialog_show"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="@drawable/my_backgruond_3"
                                    android:text="@string/review" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                        //chart view

                        <androidx.cardview.widget.CardView
                            android:id="@+id/chart_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="15sp">

                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/pie_chart"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:background="@drawable/my_background_4" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>